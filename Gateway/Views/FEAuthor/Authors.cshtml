@model X.PagedList.PagedList<Gateway.Models.Authors.Author>
@using X.PagedList.Mvc.Core;
@{
    ViewData["Title"] = "Authors";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <tr>
        <th>Name</th>
    </tr>

    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td>Authors not found</td>
        </tr>
    }
        <tr>
            <td><a asp-action="AddAuthor">Add new author</a></td>
        </tr>
</table>
<br />
@if (Model != null)
{
    <span>
    Page @(Model.PageCount< Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Authors", new { page }))
    </span>
}

