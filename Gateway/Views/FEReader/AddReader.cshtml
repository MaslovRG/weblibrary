@model Gateway.Models.Readers.Reader

@{
    ViewData["Title"] = "Add new reader";
}

<h2>Add new reader</h2>

<h4>Reader</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddAReader">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nickname" class="control-label">Nickname:</label>
                <input asp-for="Nickname" class="form-control" />
                <span asp-validation-for="Nickname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Readers">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
