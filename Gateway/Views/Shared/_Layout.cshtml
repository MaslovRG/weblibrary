<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – WebLibrary</title>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/myscripts/modernizr-2.6.2.js"></script>
    <link href="~/mycontent/bootstrap.css" rel="stylesheet" />
    <link href="~/mycontent/bootstrap.min.css" rel="stylesheet" />
    <link href="~/mycontent/Site.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("WebLibrary", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">                                        
                    <li>@Html.ActionLink("Books", "Books", "FEBook")</li>
                    <li>@Html.ActionLink("Authors", "Authors", "FEAuthor")</li>
                    <li>@Html.ActionLink("Readers", "Readers", "FEReader")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year – WebLibrary</p>
        </footer>
    </div>
</body>
</html>
